<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%- include('shared/include-css') %>

    <title><%= title %></title>
</head>

<body>
    <div class="root">
        <%- include('shared/navbar') %>
        <div class="main my-4">
            <div class="container-fluid">
                <h1 class="text-primary">List of products</h1>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>AAA</td>
                            <td>AAA</td>
                            <td>AAA</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="btn-add btn-primary" role="button"></div>
            <div class="jx-modal">
                <div class="jx-modal-content mx-auto border rounded p-3">
                    <form id="product-form" method="POST">
                        <h3>Add a new product</h3>
                        <hr class="mt-0">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input placeholder="Enter a name" id="name" name="name" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input placeholder="Enter a description" id="description" name="description" type="text"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="stock">Stock</label>
                            <input placeholder="Enter stock number" id="stock" name="stock" type="text"
                                class="form-control">
                        </div>
                        <button type="submit" class="btn btn-block btn-primary">Add product</button>
                    </form>
                </div>
            </div>
        </div>
</body>

</html>