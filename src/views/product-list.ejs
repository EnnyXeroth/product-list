<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%- include('shared/include-css') %>

    <title><%= title %></title>
</head>

<body>
    <div class="root">
        <%- include('shared/navbar') %>
        <div class="main my-4">
            <div class="container-fluid">
                <h1 class="text-primary">List of products</h1>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% const products = Object.values(productList) %>
                        <% for(let i = 0; i < products.length; i ++) { %>
                        <tr>
                            <th><%= i + 1 %></th>
                            <td><%= products[i].name %></td>
                            <td><%= products[i].description %></td>
                            <td><%= products[i].stock %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="btn-add btn-primary btn-modal" data-button="open" data-target="product-modal" role="button">
            </div>
            <div id="product-modal" class="jx-modal hide">
                <div class="jx-modal-content mx-auto border rounded p-3">
                    <form id="product-form" method="POST">
                        <h3>Add a new product</h3>
                        <hr class="mt-0">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input placeholder="Enter a name" id="name" name="name" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input placeholder="Enter a description" id="description" name="description" type="text"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="stock">Stock</label>
                            <input placeholder="Enter stock number" id="stock" name="stock" type="text"
                                class="form-control">
                        </div>
                        <div class="form-row">
                            <div class="col-8">
                                <button type="submit" class="btn btn-block btn-primary">
                                    Add product
                                </button>
                            </div>
                            <div class="col-4">
                                <button type="button" class="btn btn-block btn-outline-danger btn-modal"
                                    data-button="close" data-target="product-modal">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Scripts -->
        <script type="text/javascript" src="js/modal.js"></script>
</body>

</html>